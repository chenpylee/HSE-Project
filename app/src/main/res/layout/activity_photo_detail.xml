<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ocse.hse.Activities.PhotoDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/container_padding_left"
            android:paddingRight="@dimen/container_padding_right"
            android:paddingTop="@dimen/container_padding_top"
            android:paddingBottom="@dimen/container_padding_bottom"
            >
            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/profileDetailImageView"
                android:layout_width="@dimen/photo_detail_width"
                android:layout_height="@dimen/photo_detail_height"
                android:background="@color/image_background"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
